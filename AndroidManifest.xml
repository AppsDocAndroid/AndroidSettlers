<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.settlers" android:versionCode="14" android:versionName="1.3.0"
	android:installLocation="auto">

	<application android:name=".Settlers" android:icon="@drawable/icon"
		android:label="@string/app_name">

		<activity android:name=".Main" android:label="@string/app_name"
			android:configChanges="locale">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"
					android:launchMode="standard" android:screenOrientation="portrait" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<activity android:label="@string/app_name" android:name=".Splash"
			android:screenOrientation="portrait" android:launchMode="standard"
			android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
		</activity>

		<activity android:label="@string/app_name" android:name=".LocalGame"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".Options"
			android:launchMode="standard" android:theme="@android:style/Theme.Dialog"
			android:configChanges="locale">
		</activity>

		<activity android:label="@string/app_name" android:name=".Reference"
			android:launchMode="standard" android:theme="@android:style/Theme.Dialog">
		</activity>

		<activity android:label="@string/app_name" android:name=".Stats"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".GameActivity"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".Status"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".Rules"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".PlayerTrade"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".AcceptTrade"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".CounterOffer"
			android:launchMode="standard">
		</activity>

		<activity android:label="@string/app_name" android:name=".Discard"
			android:launchMode="standard">
		</activity>

	</application>

	<uses-sdk android:minSdkVersion="4" />
	<uses-permission android:name="android.permission.VIBRATE" />

</manifest>

