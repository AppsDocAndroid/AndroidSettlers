<?xml version="1.0" encoding="utf-8"?>

<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@android:id/tabhost" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<LinearLayout android:orientation="vertical"
		android:layout_width="fill_parent" android:layout_height="fill_parent">

		<TabWidget android:id="@android:id/tabs"
			android:layout_width="fill_parent" android:layout_height="wrap_content" />

		<ScrollView android:layout_width="fill_parent"
			android:layout_height="fill_parent">

			<FrameLayout android:id="@android:id/tabcontent"
				android:layout_width="fill_parent" android:layout_height="fill_parent">

				<LinearLayout android:id="@+id/status_content1"
					android:padding="10dip" android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="fill_parent">

					<TextView android:id="@+id/status_points1"
						android:textSize="20dip" android:layout_width="fill_parent"
						android:layout_height="fill_parent" />

					<ProgressBar android:id="@+id/status_progress1"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />

					<TextView android:id="@+id/status_text1" android:textSize="20dip"
						android:layout_width="fill_parent" android:layout_height="fill_parent" />

				</LinearLayout>

				<LinearLayout android:id="@+id/status_content2"
					android:padding="10dip" android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="fill_parent">

					<TextView android:id="@+id/status_points2"
						android:textSize="20dip" android:layout_width="fill_parent"
						android:layout_height="fill_parent" />

					<ProgressBar android:id="@+id/status_progress2"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />

					<TextView android:id="@+id/status_text2" android:textSize="20dip"
						android:layout_width="fill_parent" android:layout_height="fill_parent" />

				</LinearLayout>

				<LinearLayout android:id="@+id/status_content3"
					android:padding="10dip" android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="fill_parent">

					<TextView android:id="@+id/status_points3"
						android:textSize="20dip" android:layout_width="fill_parent"
						android:layout_height="fill_parent" />

					<ProgressBar android:id="@+id/status_progress3"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />

					<TextView android:id="@+id/status_text3" android:textSize="20dip"
						android:layout_width="fill_parent" android:layout_height="fill_parent" />

				</LinearLayout>

				<LinearLayout android:id="@+id/status_content4"
					android:padding="10dip" android:orientation="vertical"
					android:layout_width="fill_parent" android:layout_height="fill_parent">

					<TextView android:id="@+id/status_points4"
						android:textSize="20dip" android:layout_width="fill_parent"
						android:layout_height="fill_parent" />

					<ProgressBar android:id="@+id/status_progress4"
						style="@android:style/Widget.ProgressBar.Horizontal"
						android:layout_width="fill_parent" android:layout_height="wrap_content" />

					<TextView android:id="@+id/status_text4" android:textSize="20dip"
						android:layout_width="fill_parent" android:layout_height="fill_parent" />

				</LinearLayout>

			</FrameLayout>

		</ScrollView>

	</LinearLayout>

</TabHost>
	